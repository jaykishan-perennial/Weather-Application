<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>

    <style name="Theme.MyApplication" parent="AppTheme" />

    <!-- Auth Screen   -->
    <style name="authTextPrimary">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="linkTextStyle">
        <item name="android:textColor">@color/linkBlue</item>
    </style>

    <style name="linkTextStyle.highlighted">
        <item name="android:textColor">@color/linkBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="authLabelText" parent="authTextPrimary">
        <item name="android:textSize">@dimen/authScreenLabelTextSize</item>
    </style>

    <style name="authButtonStyle">
        <item name="android:textSize">@dimen/authScreenButtonTextSizeRegular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="AuthButtonStyleSmaller" parent="authButtonStyle">
        <item name="android:textSize">@dimen/authScreenButtonTextSizeSmall</item>
    </style>

    <style name="authEditTextLayoutStyle" parent="authTextPrimary">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">?colorAccent</item>
        <item name="errorTextColor">?colorError</item>
    </style>

    <style name="authEditTextLayoutStyleRounded" parent="authEditTextLayoutStyle">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Button</item>
    </style>

    <style name="authEditTextLayoutStyleChip"  >
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Chip</item>
    </style>

    <style name="authEditTextStyle" parent="authTextPrimary">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="authHeadingStyle">
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="authH1" parent="authHeadingStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="authH2" parent="authHeadingStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="authTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="dashboardStyle">
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="cardStyle">
        <item name="android:textColor">?colorTertiary</item>
        <item name="cardBackgroundColor">?colorSecondaryContainer</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

</resources>